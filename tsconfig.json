{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES2015"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["k6", "node"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/constants",
    "src/config/env",
    "src/lib",
    "scenarios",
    "services",
    "utils"
  ]
}
